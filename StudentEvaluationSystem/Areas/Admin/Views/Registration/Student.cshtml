@model StudentEvaluationSystem.Models.ViewModels.StudentRegistrationViewModel
@{
    ViewData["Title"] = "New Student";
}


<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('/images/bg_1.jpg');">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
                <h2 class="mb-0">Create</h2>
                <p>Add a new Student.</p>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Partial/_StudentRegistrationForm.cshtml" model="@Model" />


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $("#datePicker").datepicker({
                "minDate": "+1", "maxDate":"+3M"
            });

        });

        function ValidatePhoto() {
            var photo = document.getElementById("photo");
            var photoExt = photo.value.substring(photo.value.lastIndexOf('.') + 1, photo.value.length);

            if (photo.files.length == 0) {
                toastr.error("Passport Photo Required");

                return false;
                photo.style.border = "2px solid red";
            }

            else if (photoExt.toLowerCase() != "jpeg" && photoExt.toLowerCase()
                != "png" && photoExt.toLowerCase() != "jpg") {

                toastr.error("Invalid Image Selected");

                photo.style.border = "2px solid red";

                return false;
            }



            photo.style.border = "1px solid #ced4da";


            return true;

        }

    </script>
}

