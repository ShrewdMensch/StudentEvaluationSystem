@model StudentEvaluationSystem.Models.ViewModels.SessionTermViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('/images/bg_1.jpg');">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
                <h2 class="mb-0">Edit</h2>
                <p>@Model.SessionTerm.Session.Name - @Model.SessionTerm.Term.Name</p>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="border p-4" style="border-radius:10px;box-shadow:10px 10px #ccc;width:80%;margin-left:10%">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row form-group">
                    <div class="col-md-2"> <label asp-for="SessionTerm.SessionId"></label></div>
                    <div class="col-md-6">
                        @Html.DropDownListFor(c => c.SessionTerm.SessionId, new SelectList(Model.Sessions, "Id", "Name"), "-- Select Session --", new { @class = "form-control" })
                    </div>
                    <span asp-validation-for="SessionTerm.SessionId" class="text-danger"></span>
                </div>
                <div class="row form-group">
                    <div class="col-md-2"> <label asp-for="SessionTerm.TermId"></label></div>
                    <div class="col-md-6">
                        <select asp-for="SessionTerm.TermId" class="form-control" asp-items="@(new SelectList(Model.Terms,"Id","Name"))"></select>
                    </div>
                    <span asp-validation-for="SessionTerm.TermId" class="text-danger"></span>
                </div>
                <br />
                <a asp-action="Terms" class="btn btn-primary">Back to list</a>
                <button type="submit" class="btn btn-success" asp-action="EditTerm" style="background-color:#28a745!important;color:#fff">Update</button>
            </form>
        </div>
    </div>
</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

