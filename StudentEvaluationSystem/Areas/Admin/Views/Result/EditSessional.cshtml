@model StudentEvaluationSystem.Models.Result
@{
    ViewData["Title"] = "Create";
}

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('/images/bg_1.jpg');">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
                <h2 class="mb-0">Edit @Model.Subject.Name Scores </h2>
                <p>For @Model.Student.FullName (@Model.Class.Name) - @Model.SessionTerm.Term.Name, @Model.SessionTerm.Session.Name</p>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="border p-4" style="border-radius:10px;box-shadow:10px 10px #ccc;width:80%;margin-left:10%">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row form-group">
                    <input class="form-control" asp-for="StudentId" hidden />
                    <input class="form-control" asp-for="SubjectId" hidden />
                    <input class="form-control" asp-for="ClassId" hidden />
                    <input class="form-control" asp-for="SessionTermId" hidden />
                    <div class="col-md-2"> <label asp-for="TestScore"></label></div>
                    <div class="col-md-6">
                        <input class="form-control" asp-for="TestScore" />
                    </div>
                    <span asp-validation-for="TestScore" class="text-danger"></span>
                </div>
                <div class="row form-group">
                    <div class="col-md-2"> <label asp-for="ExamScore"></label></div>
                    <div class="col-md-6">
                        <input class="form-control" asp-for="ExamScore" />
                    </div>
                    <span asp-validation-for="ExamScore" class="text-danger"></span>
                </div>
                <br />
                <partial name="~/Views/Partial/_FormEditButtonPartial.cshtml" model="@("EditSessional")" />
            </form>
        </div>
    </div>
</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

