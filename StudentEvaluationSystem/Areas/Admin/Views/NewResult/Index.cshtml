@model IEnumerable<Subject>

@{
    ViewData["Title"] = "Index";
    ViewData["Heading"] = "Subjects";
}

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('/images/bg_1.jpg');">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
                <h2 class="mb-0">Subjects</h2>
                <p>Taught By Me</p>
            </div>
        </div>
    </div>
</div>



<div class="site-section">
    <div class="container">
        @if (Model.ToList().Count > 0)
        {
            <table class="table table-sm table-striped" id="subjects">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>@Html.DisplayNameFor(m => m.FirstOrDefault().TeacherId)</th>
                        <th>@Html.DisplayNameFor(m => m.FirstOrDefault().SubjectTypeId)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Teacher.FullName</td>
                            <td>@item.SubjectType.Name</td>
                            <td>
                                <div class="btn-group" style="float:right;">
                                    <a class="btn btn-success" asp-action="Classes" asp-route-id="@item.Id" style="font-size:20px;"><i class="icon-more" style="font-size:20px;"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        else
        {
            <div style="border:2px dashed #555; padding:5%"><p class="text-center">You do not currently teach any subject or current  Session/Term has not been set.</p></div>
        }
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function () {
    $('#subjects').DataTable({
            "aLengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]]
  });
    } );

    </script>

}
